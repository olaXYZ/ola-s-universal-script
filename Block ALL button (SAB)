-- Floating orbs
for i = 1, 12 do
	local orb = Instance.new("Frame")
	orb.Size = UDim2.new(0, math.random(3, 8), 0, math.random(3, 8))
	orb.Position = UDim2.new(math.random(), 0, math.random(), 0)
	orb.BackgroundColor3 = Color3.fromRGB(255, 150, 150)
	orb.BackgroundTransparency = 0.5
	orb.BorderSizePixel = 0
	orb.ZIndex = 1
	orb.Parent = innerFrame

	local orbCorner = Instance.new("UICorner")
	orbCorner.CornerRadius = UDim.new(1, 0)
	orbCorner.Parent = orb

	local orbGlow = Instance.new("UIStroke")
	orbGlow.Color = Color3.fromRGB(255, 100, 100)
	orbGlow.Thickness = 1
	orbGlow.Transparency = 0.7
	orbGlow.Parent = orb

	spawn(function()
		while task.wait(0.05) do
			local randomX = math.random()
			local randomY = math.random()
			local randomSize = math.random(3, 8)
			TweenService:Create(orb, TweenInfo.new(math.random(8, 17), Enum.EasingStyle.Sine),
				{Position = UDim2.new(randomX, 0, randomY, 0), Size = UDim2.new(0, randomSize, 0, randomSize),
				BackgroundTransparency = math.random(40, 70)/100}):Play()
			task.wait(math.random(8, 17))
		end
	end)
end

